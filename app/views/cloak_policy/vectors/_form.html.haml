= form_with model: @vector do |f|
  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :icon
    = f.text_field :icon, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, rows: 5, class: 'form-control'
  .form-group
    = f.label :parent_vector
    = f.collection_select :parent_id, CloakPolicy::Vector.all, :id, :name, {include_blank: "top level"}, { class: 'form-control' }
  .actions
    = f.submit class: "btn btn-primary"
