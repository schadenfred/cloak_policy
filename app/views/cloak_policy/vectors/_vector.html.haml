.row
  .col-2
    = material_icon(vector.icon)
    = link_to vector.full_name, vector
  .col-7
    = vector.description
    .row
    = link_to "New subvector", new_vector_path(id: vector.id)
    %br
  .col-1= link_to 'Edit', edit_vector_path(vector)
  .col-1= link_to 'Destroy', vector, method: :delete, data: { confirm: 'Are you sure?'}
%br


.row
- vector.subvectors.each do |v|
  = render 'vector', vector: v

