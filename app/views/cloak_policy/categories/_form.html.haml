= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :icon
    = f.text_field :icon
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :parent_type
    = f.text_field :parent_type
  .field
    = f.label :parent_id
    = f.number_field :parent_id
  .field
    = f.label :row_order
    = f.number_field :row_order
  .field
    = f.label :category_type
    = f.text_field :category_type
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
