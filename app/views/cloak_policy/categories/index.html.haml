%h1 Listing categories

%table
  %thead
    %tr
      %th Description
      %th Icon
      %th Name
      %th Parent type
      %th Parent
      %th Row order
      %th Category type
      %th Type
      %th
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.description
        %td= category.icon
        %td= category.name
        %td= category.parent_type
        %td= category.parent_id
        %td= category.row_order
        %td= category.category_type
        %td= category.type
        %td= link_to 'Show', category
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Category', new_category_path
