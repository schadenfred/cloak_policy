= form_for @score do |f|
  - if @score.errors.any?
    #error_explanation
      %h2= "#{pluralize(@score.errors.count, "error")} prohibited this score from being saved:"
      %ul
        - @score.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :scorable_type
    = f.text_field :scorable_type
  .field
    = f.label :scorable_id
    = f.number_field :scorable_id
  .field
    = f.label :vector_id
    = f.number_field :vector_id
  .field
    = f.label :impact
    = f.text_field :impact
  .field
    = f.label :points
    = f.number_field :points
  .actions
    = f.submit 'Save'
