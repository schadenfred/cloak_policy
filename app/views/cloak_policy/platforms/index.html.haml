.card-body
  %ul.nav.nav-tabs{:role => "tablist"}
    - @platforms.each do |platform|
      = active_link_to material_icon(platform.icon), platform

  .row
    .col-2
      %em Name
    .col-8
      %em description
  - @platforms.each do |platform|
    .row
      .col-2
        = link_to platform.name, platform
      .col-8
        = platform.description
      .col-2
        = link_to 'Edit', edit_platform_path(platform)
        |
        = link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' }
