%tr{ id: "platform-#{platform.id}"}


  %td= link_to material_icon(platform.icon, 'sm')
  %td= link_to platform.name, platform
  %td= platform.description
  %td= link_to 'Edit', edit_platform_path(platform)
  %td= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' }
  %td= recommendable_link_for(platform)
