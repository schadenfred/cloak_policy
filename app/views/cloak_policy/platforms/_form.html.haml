= form_with model: @platform, url: [:admin, @platform] do |f|
  - if @platform.errors.any?
    #error_explanation
      %h2= "#{pluralize(@platform.errors.count, "error")} prohibited this org from being saved:"
      %ul
        - @org.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :domain
    = f.text_field :domain, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :parent_id
    = f.number_field :parent_id, class: 'form-control'
  .form-group
    = f.label :platform_type
    = f.text_field :platform_type, class: 'form-control'
  .actions
    = f.submit class: "btn btn-primary"
