
= form_with model: @intent do |f|
  - if @intent.errors.any?
    #error_explanation
      %h2= "#{pluralize(@intent.errors.count, "error")} prohibited this intent from being saved:"
      %ul
        - @intent.errors.full_messages.each do |message|
          %li= message

  .form-group 
    = f.label :name 
    = f.text_field :name, class: 'form-control'
  .form-group 
    = f.label :description 
    = f.text_field :description, class: 'form-control'
  .form-group 
    = f.label :weight 
    = f.number_field :weight, class: 'form-control'      

  .actions
    = f.submit class: 'btn btn-primary'
